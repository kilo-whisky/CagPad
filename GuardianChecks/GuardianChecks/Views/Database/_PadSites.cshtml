@model IEnumerable<GuardianChecks.Models.PAD>

<div class="panel panel-default" style="margin-top:30px;">
	<div class="panel-heading">
		PAD Sites
	</div>
	<div class="panel-body">
		<table class="table table-bordered table-striped table-condensed">
			<thead>
				<tr>
					<th>@Html.DisplayNameFor(model => model.LocationName)</th>
					<th>@Html.DisplayNameFor(model => model.Cabinet)</th>
					<th>@Html.DisplayNameFor(model => model.Defib)</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr data-pad="@item.PadId">
						<td>@Html.DisplayFor(modelItem => item.LocationName)</td>
						<td>@Html.DisplayFor(modelItem => item.Cabinet)</td>
						<td>@Html.DisplayFor(modelItem => item.Defib)</td>
						<td class="text-center"><a class="btn btn-default btn-sm" href="@Url.Action("Site", "PADSites", new { PadId = item.PadId })">Details</a></td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>