@model IEnumerable<GuardianChecks.Models.Issue>

@{
    ViewBag.Title = "Issues";
}

<h2>Issues</h2>
<hr />

<div id="accordion" class="panel-group">
	<div class="panel panel-default">
		<div class="panel-heading">
			<a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">Open Issues</a>
		</div>
		<div id="collapseOne" class="panel-collapse collapse in">
			<div class="panel-body">
				@Html.Action("_Unresolved")
			</div>
		</div>
	</div>
	<div class="panel panel-default">
		<div class="panel-heading">
			<a data-toggle="collapse" data-parent="#accordion" href="#collapseTwo">Resolved</a>
		</div>
		<div id="collapseTwo" class="panel-collapse collapse">
			<div class="panel-body">
				@Html.Action("_Resolved")
			</div>
		</div>
	</div>
</div>



