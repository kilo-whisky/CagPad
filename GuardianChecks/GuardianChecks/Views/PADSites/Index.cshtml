@model IEnumerable<GuardianChecks.Models.PAD>

@{
	ViewBag.Title = "PAD Sites";
}

<div class="row">
	<div class="col-md-10">
		<h2>PAD Sites</h2>
	</div>
	<div class="col-md-2">
		@if (User.IsInRole("SYSADMIN"))
		{
			<div class="pull-right"><a href="@Url.Action("Add", "PADSites")" class="btn btn-success" style="margin-top:20px"><span class="fa fa-plus"></span> Add PAD Site</a></div>
		}

	</div>
</div>
<hr style="margin-top:10px;" />

<div class="row">
	<div class="col-md-12">
		<div class="panel panel-default">
			<div class="panel-body">
				<iframe src="https://www.google.com/maps/d/u/0/embed?mid=15_pLMzg1BQtmaIdcTY2o5IVkb2s" width="100%" height="480"></iframe>
			</div>
		</div>
	</div>
</div>

<div class="panel panel-default">
	<div class="panel-heading">
		PAD Sites
	</div>
	<div class="panel-body">
		<table class="table table-bordered table-striped table-condensed">
			<thead>
				<tr>
					<th>@Html.DisplayNameFor(model => model.LocationName)</th>
					<th>@Html.DisplayNameFor(model => model.Cabinet)</th>
					<th>@Html.DisplayNameFor(model => model.Defib)</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr data-pad="@item.PadId">
						<td>@Html.DisplayFor(modelItem => item.LocationName)</td>
						<td>@Html.DisplayFor(modelItem => item.Cabinet)</td>
						<td>@Html.DisplayFor(modelItem => item.Defib)</td>
						<td class="text-center">
							<a href="@Url.Action("Site", "PADSites", new { PadId = item.PadId })" class="btn btn-default btn-sm"><span class="fa fa-info-circle"></span></a>
							@if (User.IsInRole("SYSADMIN"))
							{
								<a href="@Url.Action("Edit", "PADSites", new { PadId = item.PadId })" class="btn btn-default btn-sm"><span class="fa fa-pencil"></span></a>
							}

						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
