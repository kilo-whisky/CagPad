@model IEnumerable<GuardianChecks.Models.Defib>

@{
	ViewBag.Title = "Defibs";
}

<div class="row">
	<div class="col-md-10">
		<h2>Defibrillators</h2>
	</div>
	<div class="col-md-2">
		@if (User.IsInRole("SYSADMIN"))
		{
			<div class="pull-right"><a href="@Url.Action("Add", "Defibs")" class="btn btn-success" style="margin-top:20px"><span class="fa fa-plus"></span> Add Defib</a></div>
		}

	</div>
</div>
<hr style="margin-top:10px;" />

<div class="panel panel-default">
	<div class="panel-heading">Defibs</div>
	<div class="panel-body">
		<table class="table table-bordered table-striped table-condensed" id="tbl-defibs">
			<thead>
				<tr>
					<th>@Html.DisplayNameFor(model => model.Name)</th>
					<th>@Html.DisplayNameFor(model => model.Description)</th>
					<th>@Html.DisplayNameFor(model => model.Serial)</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>@Html.DisplayFor(modelItem => item.Name)</td>
						<td>@Html.DisplayFor(modelItem => item.Description)</td>
						<td>@Html.DisplayFor(modelItem => item.Serial)</td>
						<td class="text-center">
							<a href="@Url.Action("Details", "Defibs", new { DefibId = item.DefibId })" class="btn btn-default btn-sm"><span class="fa fa-info-circle"></span></a>
							@if (User.IsInRole("SYSADMIN"))
							{
								<a href="@Url.Action("Edit", "Defibs", new { DefibId = item.DefibId })" class="btn btn-default btn-sm"><span class="fa fa-pencil"></span></a>
							}
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>