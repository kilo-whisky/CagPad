
@{
	ViewBag.Title = "Issues";
}

<div class="panel panel-default" style="margin-top: 20px">
	<div class="panel-heading">
		Issues
	</div>
	<div class="panel-body">
		<div class="alert alert-info">
			You answered no to the following questions, please provide some details
		</div>

		@foreach (var item in ViewBag.Issues)
		{
		<div style="margin-bottom:50px;">
			<strong>@item</strong> <br />
			<textarea class="form-control" rows="4"></textarea>			
			<div class="radio">
				<label><input type="radio" name="severity" value="3">The device is usable, issue is not urgent</label>
			</div>
			<div class="radio">
				<label><input type="radio" name="severity" value="2"><span class="text-warning"> The device is usable, but requires immediate attention</span></label>
			</div>
			<div class="radio disabled">
				<label><input type="radio" name="severity" value="1"><span class="text-danger"> Device is inoperable</span></label>
			</div>


			<input type="file" accept="image/*" name="file" multiple/>
		</div>
		}

		<button class="btn btn-default btn-sm" id="#btn-next">Next</button>

	</div>

	
</div>

